@{
    ViewData["Title"] = "Upload Excel";
}

<h2 style="text-align:center; margin-bottom:20px;">Upload Excel and Provide API URL</h2>

<div style="max-width:600px; margin:0 auto; padding:20px; border:1px solid #ccc; border-radius:10px; box-shadow:2px 2px 12px rgba(0,0,0,0.1); background-color:#f9f9f9;">
    <form asp-action="ProcessExcel" asp-controller="Parts" enctype="multipart/form-data" method="post" style="display:flex; flex-direction:column; gap:15px;">

        <div style="display:flex; flex-direction:column;">
            <label style="font-weight:bold; margin-bottom:5px;">Upload Excel File:</label>
            <input type="file" name="excelFile" required style="padding:8px; border-radius:5px; border:1px solid #ccc;" />
        </div>

        <div style="display:flex; flex-direction:column;">
            <label style="font-weight:bold; margin-bottom:5px;">API URL:</label>
            <input type="text" name="apiUrl"
                   value="https://electronicwebsite.free.beeceptor.com/part"
                   style="padding:8px; border-radius:5px; border:1px solid #ccc; width:100%;" required />
        </div>

        <button type="submit" style="padding:10px 20px; border:none; border-radius:5px; background-color:#007bff; color:white; font-weight:bold; cursor:pointer; transition:background 0.3s;">
            Process
        </button>

        @if (ViewBag.Error != null)
        {
            <p style="color:red; font-weight:bold; margin-top:10px;">@ViewBag.Error</p>
        }
    </form>
</div>

